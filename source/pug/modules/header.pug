.notify
	.notify__inner.container
		.notify__text You have 1 expired deadline and 11 deadlines expires soon.
		a.notify__link(href="#") View To-Do List
		button.notify__close(type="button")
			span.visually-hidden Close
			+icon('icon-close')(width="14", height="14")
header.header
	.header__inner.container
		a.header__logo.logo
			picture
				source(type="image/webp", srcset="img/Logo.webp 1x, img/Logo@2x.webp 2x")
				img(src="img/Logo.png", srcset="img/Logo@2x.png 2x", width="112", height="25", alt="logo")
		nav.header__nav.navigation
			ul.navigation__list
				each item in MENU
					li.navigation__item
						a.navigation__link(href="#")= item
		.notifications
			button.notifications__btn(type="button")
				span.visually-hidden Show notifications
				+icon('icon-lightning')(width="18", height="36")
			.notifications__dropdown
				.notifications__dropdown-header
					.notifications__dropdown-heading Notifications
					.notifications__dropdown-count 5
				ul.notifications__list
					each item in NOTIFICATIONS
						- let modifier = item.mod ? ' notifications__link--' + item.mod : '';
						li.notifications__item
							a(class="notifications__link" + modifier, href="#")= item.text


				//- No notifications

		.user
			a.user__link(href="#")
				picture
					source(type="image/webp", srcset="img/Account.webp 1x, img/Account@2x.webp 2x")
					img(src="img/Account.jpg", srcset="img/Account@2x.jpg 2x", width="36", height="36", alt="User avatar")
			ul.user__dropdown
				each item in USER
					li.user__dropdown-item
						a.user__dropdown-link(href="#")= item
